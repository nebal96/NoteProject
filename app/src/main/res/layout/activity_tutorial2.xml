<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="650dp"
        android:layout_height="709dp"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="-220dp"
        android:src="@drawable/tutorial1_foreground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Add Notes to NoteBook"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"/>
    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Simply create your note and add it to your favorite notebook"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Skip"
            android:textColor="#9B9B9B"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="130dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/dot_foreground" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/clrddot_foreground"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Next"
            android:background="#7B1E58"
            android:textSize="16sp"
            android:layout_marginLeft="90dp"/>

    </LinearLayout>
</LinearLayout>