<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="550dp"
        android:layout_gravity="center"
        android:layout_height="600dp"
        android:layout_marginTop="-200dp"
        android:src="@drawable/tutorial1_foreground" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7B1E58"
        android:text="NoteBooks"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Notebooks are the best place to manage your Notes "
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/t1skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Skip"
            android:textColor="#9B9B9B"/>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="130dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/clrddot_foreground"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/dot_foreground"
                />
        </LinearLayout>
        <Button
            android:id="@+id/t1next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Next"
            android:background="#7B1E58"
            android:textSize="16sp"
            android:layout_marginLeft="90dp"/>

    </LinearLayout>
</LinearLayout>