<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="550dp"
        android:layout_gravity="center"
        android:layout_height="600dp"
        android:layout_marginTop="-200dp"
        android:src="@drawable/splash_foreground" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7B1E58"
        android:text="NoteBooks"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Notebooks are the best place to manage your Notes "
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/splashlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp"
        android:gravity="center"
        android:background="#7B1E58"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        />
    <TextView
        android:id="@+id/splashsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>